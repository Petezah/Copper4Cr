{
    "author": "Matthias Kovatsch",
    "background": {
        "page": "background.html",
        "persistent": true
      "scripts": [
        "background.js"
      ]
    },
    "browser_action": {
        "default_icon": {
            "32": "skin/Cu_32.png"
        }
    },
    "description": "Copper (Cu4Cr) CoAP user-agent for Chrome",
    "icons": {
        "16": "skin/Cu_16.png",
        "24": "skin/Cu_24.png",
        "32": "skin/Cu_32.png",
        "48": "skin/Cu_48.png",
        "128": "skin/Cu_64.png"
    },
    "manifest_version": 2,
    "name": "Copper (Cu4Cr) Extension",
    "permissions": [
        "tabs",
        "management",
        "storage"
    ],
    "version": "0.1.0",
    "-ms-preload": {
        "backgroundScript": "backgroundScriptsAPIBridge.js",
        "contentScript": "contentScriptsAPIBridge.js"
    }
}